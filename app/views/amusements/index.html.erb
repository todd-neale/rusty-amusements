<div class="container mt-5">
  <h1>Available Amusements</h1>
  <% @amusements.each do |amusement| %>
    <div class="card-trip">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
      <div class="card-trip-infos">
        <div>
          <h2><%= amusement.name %></h2>
          <p><%= amusement.description %></p>
        </div>
        <h2 class="card-trip-pricing"><%= amusement.price %></h2>
        <!-- remember to put in logic for IF user has picture -->
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      </div>
    </div>
    <%= cl_image_tag("iqsih80k1bdqp821xxhbvy26wt5m", width: 400, height: 300, crop: :fill) %>
  <% end %>
</div>

